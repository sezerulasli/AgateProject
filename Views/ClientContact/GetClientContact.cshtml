@model AgateProject.Data.Models.ClientContact
@{
    ViewData["Title"] = "GetClientContact";
    Layout = "~/Views/Shared/_LayoutStaffContact.cshtml";
}

<h2 class="text-center">Change Client Contact</h2>
<br />
@using (Html.BeginForm("ChangeClientContact", "ClientContact", FormMethod.Post))
{
    @Html.LabelFor(x => x.ClientContactID)
    @Html.TextBoxFor(x => x.ClientContactID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ClientContactName)
    @Html.TextBoxFor(x => x.ClientContactName, new { @class = "form-control" })
    <br />
    @Html.Label("Client Name:")
    @Html.DropDownListFor(x => x.ClientID, (List<SelectListItem>)ViewBag.l1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Change Client Contact</button>
}

